<resources>

    <style name="DarkTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/gray900</item>
        <item name="colorAccent">@color/lightBlue500</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorBackground">@color/materialDarkBackground</item>
        <item name="colorForeground">@color/white</item>
    </style>

    <style name="LightTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@color/lightBlue500</item>
        <item name="colorPrimary">@color/gray200</item>
        <item name="colorPrimaryDark">@color/gray400</item>
        <item name="colorForeground">@color/black</item>
    </style>

</resources>
