<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkTheme" parent="@style/Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray900</item>
        <item name="colorAccent">@color/lightBlue500</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorBackground">@color/materialDarkBackground</item>
    </style>

    <style name="LightTheme" parent="@style/Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/lightBlue500</item>
        <item name="colorPrimary">@color/gray200</item>
        <item name="colorPrimaryDark">@color/gray400</item>
        <item name="android:statusBarColor">@color/gray400</item>
        <item name="colorForeground">@android:color/black</item>
    </style>
</resources>