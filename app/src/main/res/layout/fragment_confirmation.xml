<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorStatusBar"
        app:title="@string/label_confirmation"
        android:elevation="4dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvLabelEventsNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/num_events"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>
    <TextView
        android:id="@+id/tvEventsNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="36/48"
        app:layout_constraintTop_toBottomOf="@id/tvLabelEventsNumber"/>
    <TextView
        android:id="@+id/tvLabelCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEventsNumber"/>
    <TextView
        android:id="@+id/tvCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Events - davidtakac@fakemail.com"
        app:layout_constraintTop_toBottomOf="@id/tvLabelCalendar"/>
    <Button
        android:id="@+id/btnConfirmAndAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_and_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>