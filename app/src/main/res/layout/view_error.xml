<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?colorSurface">
    <ImageView
        android:id="@+id/ivError"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:tint="@color/errorRed"
        app:srcCompat="@drawable/ic_baseline_error_outline_24px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.4"/>
    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/ivError"
        app:layout_constraintLeft_toLeftOf="@id/ivError"
        app:layout_constraintRight_toRightOf="@id/ivError"
        android:layout_marginTop="10dp"
        android:gravity="center"
        tools:text="Došlo je do neočekivane pogreške"/>
    <Button
        android:id="@+id/btnBugReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/title_bug_report"
        android:layout_marginBottom="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>