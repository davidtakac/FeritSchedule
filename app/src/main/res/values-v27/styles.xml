<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DarkTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/gray900</item>
        <item name="colorAccent">@color/lightBlue500</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorBackground">@color/materialDarkBackground</item>
        <item name="colorForeground">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="LightTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@color/lightBlue500</item>
        <item name="colorPrimary">@color/gray200</item>
        <item name="colorPrimaryDark">@color/gray400</item>
        <item name="android:statusBarColor">@color/gray400</item>
        <item name="colorForeground">@android:color/black</item>
        <item name="android:navigationBarColor">@color/gray400</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>