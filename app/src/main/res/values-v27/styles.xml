<?xml version="1.0" encoding="utf-8"?>
<resources>
     <style name="AppTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">@bool/isLightSystemBar</item>
        <item name="android:windowLightNavigationBar">@bool/isLightSystemBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <item name="android:statusBarColor">@color/darkSurface</item>
        <item name="android:navigationBarColor">@color/darkSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>